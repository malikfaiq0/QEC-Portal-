@model QECWEBSITE.Models.Login

@{
    Layout = "~/Views/Shared/_LoginPage1.cshtml";
    ViewBag.Title = "Index";

}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MAJU | QEC Log in</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../dist/css/adminlte.min.css">

    <link rel="stylesheet" href="../dist/css/adminlte.css">

</head>

@Html.Raw(ViewBag.ErrorMessage)


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<body class="hold-transition login-page">
    <div class="">
        <div class="login-logo">
            <img src="https://majuonline.edu.pk/student/assets/images/maju_logo.png">
            <p id="externalFontColor"><b>Mohammad Ali Jinnah University</b></p>
        </div>
        <hr />


        <div class="card">
            <div class="card-body login-card-body">
                <div class="login-box-msg">
                    <span class="fas fa-users fa-3x"></span>
                </div>
                <h4 class="login-box-msg" id="internalFontColor">MAJU QEC Portal</h4>

                <form action="index.html" method="post">
                    <div class="">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="">
                            @Html.LabelFor(model => model.username, htmlAttributes: new { @class = "fas fa-user" })
                            <div class="group">
                                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                    <div class="">
                        <div class="">
                            @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "fas fa-unlock" })
                            <div class="group">
                                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>

                    

                    <br>

                    <div class="row">
                        <div class="col-4">

                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-danger btn-block" id="fontColor">Log In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
            </div>
            <!-- /.login-card-body -->
        </div>

        <div class="container" id="paddingSpace">
            <div class="row">
                <div class="col-lg-12">
                    <p class="mb-0" align="center" id="externalFontColor">Copyright © 2010 - 2021.</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <p class="mb-0" align="center" id="externalFontColor">Mohammad Ali Jinnah University.</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <p class="mb-0" align="center" id="externalFontColor">All rights reserved.</p>
                </div>
            </div>
        </div>
    </div>
    </body>
    }



    <!-- jQuery -->
    <script src="../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="./dist/js/adminlte.min.js"></script>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
